@model Article
@{
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}
<div class="row column py-3">
    <div class="col-12">
        <h1 lang="en">@Model.Title</h1>

        <div>
            <p class="text-body5">Published @Model.PublishedAgo ago</p>
        </div>



        <div class="blog-author">
            <div class="name with-position">
                <a data-event="area-blog-post-clicked-author" href="@Model.AuthorLink" title="Posts by @Model.Author" rel="author">@Model.Author</a>
            </div>
            <hr />
            <div class="image"><img class="img-fluid" ;" src=~/img/@Model.ImageName alt="" role="presentation"></div>
        </div>

        <hr />

        <div class="blog-postContent justify-content-center" lang="en">
            @foreach (var paragraph in Model.Text)
            {
                <p>@paragraph</p>
            }
        </div>

        <hr />

        <div class="text-xl-left col-10 text-muted">
            <p>Source: <a href="http://@Model.Source" target="_blank">@Model.Source</a></p>
        </div>

        <button id="iframe-backBtn" title="Go to top">Back</button>
    </div>
</div>