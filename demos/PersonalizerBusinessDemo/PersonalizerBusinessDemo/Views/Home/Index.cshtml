@model PersonalizerBusinessDemo.Models.PageConfigModel

@{
    ViewData["Title"] = "Personalizer Interactive Demo";

    NavBarOptionsModel navigationBarOptions = ViewData["navigationBar"] as NavBarOptionsModel;

    Func<List<NavBarItemModel>, Microsoft.AspNetCore.Html.IHtmlContent> displayMenuItems = null;

    displayMenuItems =

    @<ul class="navbar-nav mr-auto w-100">
    @foreach (NavBarItemModel menuItem in @item)
    {
        if (menuItem.Items != null)
        {
            <li class="nav-item dropdown">
                <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <b class="homeNavBarFont">@menuItem.Label </b>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @foreach (var subItem in menuItem.Items)
                    {
                        <a class="dropdown-item homeNavBarFont" href="#">@subItem.Label</a>
                    }
                </div>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link homeNavBarFont" href="#"><b>@menuItem.Label</b></a>
            </li>
        }

    }
        <li class="nav-item ml-auto">
            <button class="btn btn-light" type="button" data-toggle="collapse" data-target="#collapseBackstage" aria-expanded="false" aria-controls="collapseBackstage">
                @navigationBarOptions.BackstageLabelBtn
            </button>
        </li>
    </ul>;
}

<div class="row">
    <div class="col p-0">

        <nav class="navbar navbar-expand-md navbar-dark px-5 articleNavBar" style="background-color:@navigationBarOptions.BackgroundColor;">
            <a class="navbar-brand" id="brand-logo" href="#"><img src="~/@navigationBarOptions.LogoImageURL" style="width:40px;height:35px;" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                @displayMenuItems(navigationBarOptions.OptionsList as List<NavBarItemModel>)

            </div>
        </nav>

        <div class="embed-responsive embed-responsive-1by1 article-container">
            <iframe id="article-viewer" class="embed-responsive-item" src="/Home/HomeSite" allowfullscreen></iframe>
        </div>

        <footer class="border-top footer">
            <div class="container-fluid h-100 ">
                <div class="row h-100 d-flex align-items-center">
                    <div class="col-12 pr-1">
                        <div class="progress" style="height: 58px">
                            <div class="progress-bar" role="progressbar" id="reward" style="width: 0;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="1">0</div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <div class="col-md-5 collapse border-left p-0" id="collapseBackstage">
        <div class="overflow-auto backstage-container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary backstageNavBar">
                <div class="navbar-brand">See Personalizer in Action</div>
            </nav>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <form class="form-inline py-3">
                            <label class="sr-only" for="weekDay">Week day</label>
                            <select class="custom-select my-1 mr-sm-2" id="weekDay">
                                <option value="workweek" selected>Workweek</option>
                                <option value="weekend">Weekend</option>
                            </select>

                            <label class="sr-only" for="profile">Profile</label>
                            <select class="custom-select my-1 mr-sm-2" id="profile">
                                <option value="anonymous" selected>Anonymous</option>
                                <option value="loggedin">Logged In</option>
                                <option value="paying">Paying</option>
                            </select>

                            <label class="sr-only" for="tournament">Tournament</label>
                            <select class="custom-select my-1 mr-sm-2" id="tournament">
                                <option value="tournament1" selected>Tournament 1</option>
                                <option value="tournament2">Tournament 2</option>
                                <option value="tournament3">Tournament 3</option>
                            </select>
                            <button type="button" class="btn btn-primary" id="go-btn">
                                @Model.RefreshButtonText
                            </button>
                        </form>

                        <div class="card">
                            <div class="card-body p-0 pt-0">
                                <h5 class="card-title ml-1 mt-0">Request</h5>
                                <div class="card">
                                    <div class="card-header">
                                        <ul class="nav nav-tabs card-header-tabs" id="response-action-tab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="context-tab" data-toggle="tab" href="#context" role="tab" aria-controls="context" aria-selected="true">Context</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="actions-container-tab" data-toggle="tab" href="#actions-container" role="tab" aria-controls="actions-container" aria-selected="false">Possible actions</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="card-body p-0 pt-1">
                                        <div class="tab-content" id="myTabContent">
                                            <div class="tab-pane fade show active" id="context" role="tabpanel" aria-labelledby="context-tab">
                                                <div class="card">
                                                    <div class="card-body p-0">
                                                        <div class="card-title mt-3 ml-2">
                                                            <h5 class="d-inline pr-2">Context JSON</h5>
                                                            <div class="custom-control custom-checkbox d-inline-flex align-items-end">
                                                                <input type="checkbox" class="custom-control-input" id="use-useragent">
                                                                <label class="custom-control-label" for="use-useragent"><small>Use User Agent</small></label>
                                                            </div>
                                                        </div>
                                                        <pre class="pre-scrollable m-0 p-1 border-top" style="min-height:300px;"><code id="context-code"></code></pre>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="actions-container" role="tabpanel" aria-labelledby="actions-container-tab">
                                                <div class="row justify-content-between">
                                                    <div class="col-5 pr-0">
                                                        <div class="card">
                                                            <div class="card-header p-2">
                                                                <strong>Action list</strong>
                                                                <p class="mb-0"><small>Articles to choose from</small></p>
                                                            </div>
                                                            <div class="card-body p-0">
                                                                <div class="nav flex-column nav-pills" id="actions-tab" role="tablist" aria-orientation="vertical">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-7 pl-1">
                                                        <div class="card">
                                                            <div class="card-header p-2">
                                                                <strong>Action JSON</strong>
                                                                <div class="custom-control custom-checkbox">
                                                                    <input type="checkbox" class="custom-control-input" id="text-analytics">
                                                                    <label class="custom-control-label" for="text-analytics"><small>Add features extracted with Text Analytics</small></label>
                                                                </div>
                                                            </div>
                                                            <div class="card-body p-0">
                                                                <div class="tab-content" id="actions-tabContent">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row d-none" id="result-section">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body p-0 pt-1">
                                <h5 class="card-title ml-2 mt-2">Response</h5>
                                <pre class="pre-scrollable border mb-3 p-1" style="max-height:200px;"><code id="result-code"></code></pre>

                                <h6 class="card-subtitle ml-2 mt-2">For this Rank call, Personalizer was</h6>
                                <div class="card-group p-4">
                                    <div id="exploring-box" class="card-flex col-md-6">
                                        <div class="card-body" data-toggle="tooltip" data-placement="top" title="Personalizer returned a rewardActionId that is different than the one the learned model predicts would get most reward, in order to discover patterns and keep up with trends.">
                                            <h5 class="card-title text-center">Exploring</h5>
                                            <div class="card-text text-center"><i class="fas fa-search fa-5x" style="color:#c8c8c8;"></i></div>
                                        </div>
                                    </div>
                                    <div id="exploiting-box" class="card-flex col-md-6">
                                        <div class="card-body" data-toggle="tooltip" data-placement="top" title="Personalizer returned a rewardActionId that was predicted by the model as most likely to get high reward for this context ('Exploiting' in RL terminology).">
                                            <h5 class="card-title text-center">Using Learned Model</h5>
                                            <div class="card-text text-center"><i class="fas fa-chart-line fa-5x" style="color:#c8c8c8;"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <hr />

                <div class="row" id="alert-container"></div>
                <div class="row" style="height: 58px;" id="timeleft-container"></div>

                <hr />

                <div class="row">
                    <div class="col-md-12">
                        Learn about <a href=@Model.PersonalizerDocumentationURL>@Model.PersonalizerDocumentationLabel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/demo.js" asp-append-version="true"></script>
}
