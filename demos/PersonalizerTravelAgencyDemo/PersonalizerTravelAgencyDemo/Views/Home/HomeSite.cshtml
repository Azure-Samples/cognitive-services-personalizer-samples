@{
    PageConfigModel siteConfig = ViewData["siteConfig"] as PageConfigModel;
    ViewData["Title"] = "HomeSite";
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="main_slot_image container-img-text card " style="height: 100%; color: black;">
            <div class="row mx-1 my-md-auto">
                <div class="col-12">
                    <div>
                        <h1 class="mt-3 page-title">
                            Shopping Cart - Vacation Builder
                        </h1>
                    </div>
                    <div class="row justify-content-start mx-3 homesite_checks">
                        <div class="row">
                            <div class="col-12">
                                <div class="row ml-3"><p> Package Includes: </p></div>
                                <div class="row ml-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input homesite_checks" id="BoatTripcheck">
                                        <label class="form-check-label" for="">Boat Trip</label>
                                    </div>
                                </div>
                                <div class="row ml-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input homesite_checks" id="AmenitiesCheck">
                                        <label class="form-check-label" for="">Dinner and BreakFast</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="mx-3"/>
                    <div class="row justify-content-start mx-3 homesite_checks">
                        <div class="row">
                            <div class="col-12">
                                <div class="row ml-3"><p> Costs: </p></div>
                                <div class="row ml-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input homesite_checks" id="costAllInclusive">
                                        <label class="form-check-label" for="">+ $4000 All Inclusive</label>
                                    </div>
                                </div>
                                <div class="row ml-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input homesite_checks" id="costLuxuryPackage">
                                        <label class="form-check-label" for="">+ %5000 Luxury Package</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row justify-content-end">
                        <button type="button" class="btn homesite_button" id="go-btn-iframe">
                            @siteConfig.RefreshButtonText
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const goBtnIframe = document.getElementById('go-btn-iframe');
        if (goBtnIframe) {
            goBtnIframe.addEventListener("click", function () {
                parent.document.getElementById("go-btn").click()
            })
        }

        const backstageBtnIframe = document.getElementById('backstage-btn-iframe');
        if (backstageBtnIframe) {
            backstageBtnIframe.addEventListener("click", function () {
                parent.document.getElementById("backstage-btn").click();

                backstageBtnIframe.innerHTML = backstageBtnIframe.innerHTML === `@siteConfig.MainArticleCloseBackstageLabel` ? `@siteConfig.MainArticleShowBackstageLabel` : `@siteConfig.MainArticleCloseBackstageLabel`;
            })
        }
    });

</script>
