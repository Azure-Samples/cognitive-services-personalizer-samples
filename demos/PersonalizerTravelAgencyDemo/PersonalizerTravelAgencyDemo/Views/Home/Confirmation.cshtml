@{
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}
<div class="row column py-3">
    <div class="card col-12 col-md-10 offset-md-1 p-4">
        <div class="col-sm-12">
            <h2 class="text-capitalize">Your Dream Vacation Package Is Ready!</h2>

            <div class="row">
                @await Html.PartialAsync("./Partials/_Image.cshtml")
            </div>

            @await Html.PartialAsync("./Partials/_Confirm.cshtml")

            <div class="row mt-4">

                @await Html.PartialAsync("./Partials/_Costs.cshtml")

                @await Html.PartialAsync("./Partials/_Package.cshtml")

            </div>


            <div class="row mt-4">
                @await Html.PartialAsync("./Partials/_Discover.cshtml")
            </div>

            <div class="row mt-4">
                @await Html.PartialAsync("./Partials/_Payment.cshtml")
            </div>

            <div id="gauge-backbtn-section">
                <button id="iframe-backBtn" title="Go to top">Back</button>

                <div class="gauge-container" id="gauge-container">
                    <div class="gauge-background"></div>
                    <div class="gauge-a"></div>
                    <div class="gauge-b"></div>
                    <div class="gauge-c" id="gauge"></div>
                    <div class="gauge-cover"></div>
                    <div class="gauge-data">
                        <h1 id="percent">Engagement Reward</h1>
                    </div>
                    <div class="gauge-comment">
                        <h1 id="gauge-comment"></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>