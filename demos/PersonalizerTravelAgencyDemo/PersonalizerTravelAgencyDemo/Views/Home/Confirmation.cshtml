@{
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}
<div class="row column py-3">
    <div class="card col-12 col-md-10 offset-md-1 p-4">
        <div class="col-sm-12">
            <h2 class="text-capitalize">Your Dream Vacation Package Is Ready!</h2>

            <div class="row">
                <div id="image-section" class="col-12">
                    <div class="main_slot_image container-img-text">
                        <div class="article-img-container">
                            <img src="~/img/caribbean-placeholder.jpg" alt="Beach vacation" />
                        </div>
                    </div>
                </div>
            </div>

            <div id="confirm-button-section" class="row mt-4">
                <div class="col-md-4 offset-md-4 col-sm-12 text-center">
                    <button class="btn text-capitalize homesite_button">Confirm Purchase</button>
                </div>
                <div class="col-md-4 col-sm-12 text-center text-md-right my-auto">
                    <a href="#">Save for Later</a>
                </div>
            </div>

            <div class="row mt-4">
                <div id="costs-section" class="col-md-6 col-sm-12">
                    <div class="row background-light-gray mr-md-2">
                        <div class="mx-2 my-auto">
                            <i class="fas fa-coins fa-5x"></i>
                        </div>
                        <div>
                            <h5>Costs</h5>
                            <p>
                                $4000 All Inclusive<br />
                                + $500 Luxury Package
                            </p>
                        </div>
                    </div>
                </div>

                <div id="package-section" class="col-md-6 col-sm-12 mt-4 mt-md-0">
                    <div class="row background-light-gray ml-md-2">
                        <div class="mx-2 my-auto">
                            <i class="fas fa-check-circle fa-5x"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5>Package Includes</h5>
                            <ul>
                                <li>Boat Trip</li>
                                <li>Dinner and Breakfast</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

            <div class="w-100"></div>

            <div class="row mt-4">
                <div id="discover-section" class="col-12 background-light-gray">
                    <div class="row">
                        <div class="mx-2 my-auto">
                            <i class="fas fa-umbrella-beach fa-5x"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5>Discover</h5>
                            <ul>
                                <li>Pristine Beaches</li>
                                <li>High End Experiences</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-100"></div>

            <div class="row mt-4">
                <div id="payment-section" class="col-12 background-light-gray">
                    <h6>Payment</h6>
                    <p>Your credit card ending in 1234</p>
                </div>
            </div>

            <div id="gauge-backbtn-section">
                <button id="iframe-backBtn" title="Go to top">Back</button>

                <div class="gauge-container" id="gauge-container">
                    <div class="gauge-background"></div>
                    <div class="gauge-a"></div>
                    <div class="gauge-b"></div>
                    <div class="gauge-c" id="gauge"></div>
                    <div class="gauge-cover"></div>
                    <div class="gauge-data">
                        <h1 id="percent">Conversion Reward</h1>
                    </div>
                    <div class="gauge-comment">
                        <h1 id="gauge-comment"></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>